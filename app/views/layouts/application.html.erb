<!DOCTYPE html>
<html>
  <head>
    <title>Thefirstrails</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <div class="container-fluid">
      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>
    </div>
    <% if user_signed_in? %>
      <%= link_to 'ホーム', new_user_session_path %>
      <p>こんにちは、<%= link_to current_user.email, users_show_path %></p>
      <%= link_to "ログアウト", destroy_user_session_path, data: {"turbo-method": :delete} %>

    <% else %>
      <%= link_to "サインイン", new_user_session_path %>
      <%= link_to "ユーザー登録", new_user_registration_path %>
      <hr></hr>
      <h1>Home Page</h1>
      <br>

    <% end %>
    <%= yield %>
  </body>

</html>
